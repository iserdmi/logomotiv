<%	#= params[:show] == 'overs' ? @project.overs : @project.body %>
<% content_for :head do %>
<%= stylesheet_link_tag "colorbox" %>
<%= javascript_include_tag "jquery.colorbox-min" %>
<script type="text/javascript">
$(document).ready(function (){
$("a.review").colorbox({opacity: 0.5});
});
</script>
<% end %>

<% content_for :sidebar do %>

<% if @project.overs.size > 10 %>
<% if params[:show] == 'overs' %>
<%= content_tag('div', "<p>За кадром</p>", :class => 'project-nav active') %>
<%= content_tag('div', link_to("Обзор", "?show=overview"), :class => 'project-nav') %>
<% else %>
<%= content_tag('div', link_to("За кадром", "?show=overs"), :class => 'project-nav') %>
<%= content_tag('div', "<p>Обзор</p>", :class => 'project-nav active') %>
<% end %>
<% end %>
<br clear="all" />

<div id="sidebar">
<p><img align="left" src="/images/menu_arrow_l.gif" />&nbsp;<a href="/portfolio/<%=h params[:section] %>/companies" class="back_to_list">К списку проектов</a></p><br/>
<% if @project.review_file_name %>
<p><a href="<%= @project.review.url%>" class="toggle_link review">Отзыв клиента</a></p><br/>
<% end %>

<% if @project.case_file_name %>
<p><img align="left" src="/images/pdf_icon.gif" /><a href="<%= @project.review.url%>" class="case">Скачать кейс (PDF)</a></p><br/>
<% end %>

<% if @project.client.projects.find(:all, :conditions => "id != #{@project.id}").size > 0 %>
<p>Другие проекты:<br/>
<%@project.client.projects.find(:all, :conditions => "id != #{@project.id}").each do |p| %>
<a href="/portfolio/<%=p.section%>/p/<%=p.slug%>"><%= p.name %></a>
<% end %>
</p>
<% end %>
<p><a class="toggle_link" onclick="$('#workers').slideToggle();">Над проектом работали:</a><br/>
<div id="workers">
<%= @project.sidebar if @project.sidebar %>
</div>
</p>
</div>

<% end %>
<div class="container">
<div id="sidebar">
	<%= yield :sidebar %>
</div>
<div class="page_content">
	<%= render :partial => "portfolio/tpl1", :object => @project %>
</div>
</div>