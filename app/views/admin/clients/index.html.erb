<div class="container">
<h1>Клиенты</h1>

<table>
  <tr>
    <th>Название</th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%=h client.title %></td>
    <td><%= link_to 'Просмотр', admin_client_path(client) %></td>
    <td><%= link_to 'Редактировать', edit_admin_client_path(client) %></td>
    <td><%= link_to 'Уничтожить', admin_client_path(client), :confirm => 'Вы уверены?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новый альбом', new_admin_client_path %>
</div>